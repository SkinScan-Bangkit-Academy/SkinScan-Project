<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="130dp"
            android:src="@drawable/skinscan"
            android:contentDescription="@string/Home_logo" />

        <TextView
            android:id="@+id/nameapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textColor="@color/primaryColor" />

        <LinearLayout
            android:id="@+id/opening"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/nameapp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/displayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginStart="30dp"
                    android:textSize="25sp"
                    android:text="@string/hi"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/roboto_medium" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc_name"
                android:textColor="@color/blue_transparan"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/img_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/img_doctor"
                android:contentDescription="@string/home_img" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/content_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/opening"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/title_type"
                android:textSize="17sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/primaryColor"
                android:gravity="center" />

            <ImageView
                android:id="@+id/bg_rv"
                android:layout_width="370dp"
                android:layout_height="290dp"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/bg_search"
                android:contentDescription="@string/bg_rv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_home"
                android:layout_width="350dp"
                android:layout_height="270dp"
                android:layout_margin="20dp"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>